{
module Text2HtmlLex

let lexeme = Lexing.LexBuffer<_>.LexemeString

}

rule convertHtml chan = parse
	| '<'	{	fprintf chan "&lt;"
				convertHtml chan lexbuf }
	| '>'	{	fprintf chan "&gt;"
				convertHtml chan lexbuf }
	| eof	{ () }
	| _		{	fprintf chan "%s" (lexeme lexbuf)
				convertHtml chan lexbuf }


